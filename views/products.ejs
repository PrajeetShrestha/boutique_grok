<%- include('partials/header') %>
<main>
    <section class="products-section">
        <h1>Our Products</h1>
        
        <div class="products-grid">
            <% products.forEach(product => { %>
                <div class="product-card">
                    <div class="product-card__image">
                        <img src="<%= product.primaryImg %>" 
                             alt="<%= product.name %>"
                             onerror="this.src='/images/placeholder.jpg'">
                    </div>
                    <div class="product-card__content">
                        <h3><%= product.name %></h3>
                        <div class="product-card__details">
                            <p><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
                            <p><strong>Color:</strong> <%= product.color %></p>
                            <p><strong>Fabric:</strong> <%= product.fabric %></p>
                        </div>
                        <button class="btn btn-primary order-btn" 
                                onclick="showOrderForm(<%= JSON.stringify(product) %>)">
                            Order Now
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/products?page=<%= currentPage - 1 %>" class="btn btn-secondary">&laquo; Previous</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <a href="/products?page=<%= currentPage + 1 %>" class="btn btn-secondary">Next &raquo;</a>
            <% } %>
        </div>
    </section>
</main>
<%- include('partials/footer') %>